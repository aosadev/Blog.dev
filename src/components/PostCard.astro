---
export interface Props {
  title: string;
  description: string;
  publishDate: string;
  id: string;
}

const { title, description, publishDate, id }: Props = Astro.props;
---

<article class="post-card border-b border-gray-300 py-4">
  <h2 class="text-2xl font-bold">
    <a href={`/posts/${id}`} class="text-blue-600 hover:underline">{title}</a>
  </h2>
  <p class="text-gray-700 my-2">{description}</p>
  <small class="text-gray-500">Publicado el {publishDate}</small>
</article>

<style>
  .post-card h2 {
    margin-bottom: 0.5rem;
  }
</style>
